$(document).ready(function() {  
     var audioSection = $('section#song'); 

     var trackName = $('h3#track-name');

     var buyCTA = $('a.buy-cta');
     
     $('div.content-panel.tracks').click(function() { 

     $('body').find('.header-offset').addClass('audio-player-active') 

     var audio = $('<audio>', {  
         controls : 'controls', autoplay: true  
     });  

     var url = $(this).attr('href');  
     $('<source>').attr('src', url).appendTo(audio);  
     audioSection.html(audio);  
     trackName.html($(this).data('name') + ' by ' + $(this).data('author'))
     buyCTA.html('Purchase for ' + $(this).data('price'))
     return false;       
 	});  
 });