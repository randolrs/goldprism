<div class="modal-container" id="join-form">

  <div class="modal-content">

	<h3>Join</h3>

    <span class="dismiss-modal">+</span>

    <div class="horizontal-sub-nav">

		<ul>

			<li><a class="option-item active" id="login-option"><span>Login</span></a></li>
			<li><a class="option-item"  id="signup-option"><span>Join</span></a></li>

		</ul>

	</div>



    <%= form_for(:user, :url => registration_path(:user)) do |f| %>
	  <%= f.text_field :email %>
	  <%= f.password_field :password %>
	  <%= f.check_box :remember_me %>
	  <%= f.submit 'Join' %>
	  <%= link_to "Forgot your password?", new_password_path(:user) %>
	<% end %>

  </div>


</div>

