<div class="modal-container full" id="join-form">

	<span class="dismiss-modal">+</span>

	<div class="modal-content full">
    
    <h3>10th</h3>

    <%= form_for(:user, :url => registration_path(:user)) do |f| %>
	  <%= f.text_field :email, placeholder: "Email", autofocus: true %><br>
	  <%= f.text_field :display_name, placeholder: "Display Name" %><br>
	  <%= f.password_field :password, placeholder: "Password" %><br>
	  <%= f.submit 'Join' %>
	  <%= link_to "Forgot your password?", new_password_path(:user) %>
	<% end %>

  </div>


</div>


